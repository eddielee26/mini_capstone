@products_index.map do |prod|
  {
    id: prod.id,
    name: prod.name,
    price: prod.price,
    image_url: prod.image_url,
    description: prod.description,
    discounted: prod.is_discounted?,
    tax: prod.tax,
    total: prod.total    
  }
end

